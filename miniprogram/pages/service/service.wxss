/* pages/service/service.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 客服信息 */
.service-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 二维码区域 */
.qrcode-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.qrcode-container {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  overflow: hidden;
}

.qrcode-image {
  width: 100%;
  height: 100%;
}

.qrcode-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #666;
}

.qrcode-desc {
  font-size: 28rpx;
  color: #666;
}

/* 微信信息 */
.wechat-info {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.copy-btn {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  margin-left: 16rpx;
}

/* 使用说明 */
.instructions {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.instruction-header {
  margin-bottom: 24rpx;
}

.instruction-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.instruction-list {
  
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 常见问题 */
.faq-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.faq-header {
  margin-bottom: 24rpx;
}

.faq-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.faq-item {
  border-bottom: 2rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s, padding 0.3s;
}

.faq-answer.show {
  max-height: 200rpx;
  padding-top: 16rpx;
}

.answer-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 反馈建议 */
.feedback-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.feedback-header {
  margin-bottom: 24rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.feedback-form {
  position: relative;
}

.feedback-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.feedback-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
} 