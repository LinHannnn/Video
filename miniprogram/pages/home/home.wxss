/* pages/home/home.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 应用标题 */
.app-title {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 0;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 滚动公告 */
.announcement-section {
  width: 100%;
  max-width: 600rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.announcement-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.announcement-swiper {
  flex: 1;
  height: 120rpx;
}

.announcement-item-wrapper {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
}

.announcement-item {
  height: 120rpx;
  display: inline-flex;
  align-items: center;
  white-space: nowrap;
}

.announcement-text {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  padding-right: 80rpx;
}

/* 复制的文本，用于无缝循环 */
.announcement-text-copy {
  padding-left: 0;
}

/* 单条公告横向滚动动画 - 循环移动 */
.announcement-scroll-single {
  animation: scroll-single 12s linear infinite;
}

@keyframes scroll-single {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

/* 多条公告横向滚动动画 - 无缝循环 */
.announcement-scroll-multi {
  /* 默认不播放动画，等待激活 */
  animation: none;
}

/* 当前显示的公告才播放动画 */
.announcement-scroll-multi.active {
  animation: scroll-left 10s linear infinite;
}

@keyframes scroll-left {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* 输入区域 */
.input-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
}

.url-input {
  width: 100%;
  min-height: 200rpx;
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.5;
  color: #333;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.url-input:focus {
  border-color: #007aff;
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.15);
}

.url-input::placeholder {
  color: #999;
}

/* 按钮区域 */
.button-section {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.clear-btn {
  background: #fff;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.clear-btn:not([disabled]):active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.clear-btn[disabled] {
  background: #f5f5f5;
  color: #ccc;
  border-color: #e9ecef;
}

.parse-btn {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,122,255,0.3);
}

.parse-btn:not([disabled]):active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.3);
}

.parse-btn.loading {
  background: #999;
  box-shadow: none;
}

.parse-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

/* 免责声明提示 */
.disclaimer-notice {
  text-align: center;
  margin-top: auto;
  padding-top: 40rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 640rpx;
  max-width: 90%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalShow 0.3s ease-out;
}

@keyframes modalShow {
  0% {
    opacity: 0;
    transform: scale(0.8) translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  padding: 40rpx 32rpx 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-body {
  padding: 32rpx;
}

.disclaimer-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx 40rpx;
}

.modal-btn {
  flex: 1;
  height: 76rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.confirm-btn {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: #fff;
}

.confirm-btn:active {
  opacity: 0.8;
}

/* 登录弹窗样式 */
.login-modal {
  max-width: 85%;
}

.login-tips {
  text-align: center;
  padding: 20rpx 0;
}

.tips-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.tips-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
}

.tips-note {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

.login-footer {
  display: flex;
  gap: 16rpx;
}

.simple-login-btn {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.simple-login-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
} 