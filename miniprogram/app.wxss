/* app.wxss */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: #333;
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: white;
  border-radius: 16rpx;
  border: none;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #ffffff;
  color: #007aff;
  border: 2rpx solid #007aff;
  border-radius: 16rpx;
  padding: 22rpx 30rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: #f7f7f7;
  transform: scale(0.98);
}

/* 输入框样式 */
.input-field {
  background-color: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #007aff;
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.15);
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-muted {
  color: #999999;
  font-size: 26rpx;
}

/* 间距工具类 */
.mb-20 {
  margin-bottom: 20rpx;
}

.mb-40 {
  margin-bottom: 40rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-40 {
  margin-top: 40rpx;
} 